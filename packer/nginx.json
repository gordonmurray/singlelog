{
    "builders": [
        {
            "type": "amazon-ebs",
            "profile": "{{user `profile`}}",
            "region": "{{user `region`}}",
            "instance_type": "{{user `arm_instance_type`}}",
            "source_ami": "{{user `arm_base_ami_id`}}",
            "ami_name": "nginx",
            "ami_description": "nginx",
            "ssh_username": "ubuntu",
            "vpc_id": "{{user `vpc_id`}}",
            "subnet_id": "{{user `subnet_id`}}",
            "force_deregister": "true",
            "force_delete_snapshot": "true",
            "tags": {
                "Name": "nginx"
            }
        }
    ],
    "provisioners": [
        {
            "type": "shell",
            "inline": [
                "sudo apt-get update && sudo apt-get upgrade -y && sudo apt-get dist-upgrade -y && sudo apt-get autoremove -y && sudo apt-get autoclean -y",
                "sudo apt-get install nginx-core certbot -y",
                "curl --proto '=https' --tlsv1.2 -sSf https://sh.vector.dev | bash -s -- -y"
            ]
        },
        {
            "type": "file",
            "source": "./files/vector.toml",
            "destination": "/home/ubuntu/vector.toml"
        }
    ]
}