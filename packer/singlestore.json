{
    "variables": {
        "base_ami_id": "ami-08c40ec9ead489470",
        "region": "us-east-1",
        "instance_type": "t3.xlarge",
        "vpc_id": "vpc-035f00c3a6b353774",
        "subnet_id": "subnet-04edf0972d10405ac",
        "profile": "terraform-staging"
    },
    "builders": [
        {
            "type": "amazon-ebs",
            "profile": "{{user `profile`}}",
            "region": "{{user `region`}}",
            "instance_type": "{{user `instance_type`}}",
            "source_ami": "{{user `base_ami_id`}}",
            "ami_name": "singlestore",
            "ami_description": "singlestore",
            "ssh_username": "ubuntu",
            "vpc_id": "{{user `vpc_id`}}",
            "subnet_id": "{{user `subnet_id`}}",
            "force_deregister": "true",
            "force_delete_snapshot": "true",
            "tags": {
                "Name": "singlestore"
            }
        }
    ],
    "provisioners": [
        {
            "type": "shell",
            "inline": [
                "sudo apt-get update && sudo apt-get upgrade -y && sudo apt-get dist-upgrade -y && sudo apt-get autoremove -y && sudo apt-get autoclean -y",
                "wget -O - 'https://release.memsql.com/release-aug2018.gpg'  2>/dev/null | sudo apt-key add - && apt-key list",
                "sudo apt-cache policy apt-transport-https",
                "sudo apt -y install apt-transport-https",
                "echo \"deb [arch=amd64] https://release.memsql.com/production/debian memsql main\" | sudo tee /etc/apt/sources.list.d/memsql.list",
                "sudo apt update && sudo apt -y install singlestoredb-toolbox singlestore-client singlestoredb-studio"
            ]
        },
        {
            "type": "file",
            "source": "./files/cluster.yml",
            "destination": "/home/ubuntu/cluster.yml"
        }
    ]
}